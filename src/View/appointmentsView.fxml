<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@applicationFont.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.appointmentViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0">
         <children>
            <Label prefHeight="30.0" text="Appointments">
               <font>
                  <Font name="System Bold" size="23.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            <Pane prefHeight="450.0" prefWidth="700.0" style="-fx-border-radius: 10; -fx-border-color: black; -fx-border-width: 1.5;">
               <VBox.margin>
                  <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
               </VBox.margin>
               <children>
                  <VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="750.0">
                     <children>
                        <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
                           <children>
                              <RadioButton fx:id="allApptsRBtn" mnemonicParsing="false" onAction="#onActionDisplayAllAppts" selected="true" text="All Appointments">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="appointmentsViewToggle" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="apptsWeeklyRBtn" mnemonicParsing="false" onAction="#onActionDisplayWeeklyAppts" text="Appointments within the next week" toggleGroup="$appointmentsViewToggle">
                                 <HBox.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </HBox.margin>
                              </RadioButton>
                              <RadioButton fx:id="apptsMonthlyRBtn" mnemonicParsing="false" onAction="#onActionDisplayMonthlyAppts" text="Appointments within the next month" toggleGroup="$appointmentsViewToggle">
                                 <HBox.margin>
                                    <Insets right="20.0" />
                                 </HBox.margin></RadioButton>
                              <RadioButton mnemonicParsing="false" onAction="#onActionDisplayPastAppointments" text="Past Appointments" toggleGroup="$appointmentsViewToggle" />
                           </children>
                        </HBox>
                        <TableView fx:id="apptTableView" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="375.0" prefWidth="730.0">
                          <columns>
                            <TableColumn fx:id="apptIDCol" prefWidth="30.0" text="ID" />
                            <TableColumn fx:id="apptTitleCol" prefWidth="105.0" text="Title" />
                              <TableColumn fx:id="apptDescCol" prefWidth="75.0" text="Description" />
                              <TableColumn fx:id="apptLocCol" prefWidth="109.5" text="Location" />
                              <TableColumn fx:id="apptContactCol" prefWidth="61.0" text="Contact" />
                              <TableColumn fx:id="apptTypeCol" prefWidth="50.0" text="Type" />
                              <TableColumn fx:id="apptStartsCol" prefWidth="110.0" text="Starts" />
                              <TableColumn fx:id="apptEndsCol" prefWidth="110.0" text="Ends" />
                              <TableColumn fx:id="apptCustIDCol" prefWidth="78.5" text="Customer ID" />
                          </columns>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" />
                           </VBox.margin>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </Pane>
            <Button mnemonicParsing="false" onAction="#onActionReturnToMain" text="Back">
               <VBox.margin>
                  <Insets left="650.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
